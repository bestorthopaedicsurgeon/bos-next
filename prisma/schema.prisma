generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  password  String
  name      String
  firstName String?
  lastName  String?
  image     String?

  reviews DoctorReview[]

  phone String?
  role  Role

  doctorProfile DoctorProfile? @relation("UserDoctorProfile")
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}

enum Title {
  DR
  MR
  MSa
  PROF
}

model DoctorProfile {
  id                        Int          @id @default(autoincrement())
  userId                    String?      @unique
  user                      User?        @relation("UserDoctorProfile", fields: [userId], references: [id])
  image                     String?
  title                     String?
  name                      String?
  experience                Int?
  designation               Designation?
  practices                 Json?
  location                  String?
  subspecialities           String[]     @default([])
  about                     String?
  registrationsAssociations String[]     @default([])
  qualifications            String[]     @default([])
  awardsPublications        String[]     @default([])
  hospitalAffiliations      Json?

  registrationCompleted Boolean        @default(false)
  featured              Boolean        @default(false)
  reviews               DoctorReview[]

  DoctorAvailability     DoctorAvailabilityTime[]
  DoctorAvailabilityDays String[]
}

model DoctorReview {
  id              Int    @id @default(autoincrement())
  professionalism Int
  punctuality     Int
  helpfulness     Int
  knowledge       Int
  review          String

  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])
  doctorId Int

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())

  @@unique([userId, doctorId])
}

